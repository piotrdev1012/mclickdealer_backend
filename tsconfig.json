{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6" /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES6', 'ES2015', 'ES2016', 'ES2017', 'ES2018', 'ES2019', 'ES2020', or 'ESNEXT'. */,
    "module": "commonjs" /* Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', or 'ESNext'. */,
    "lib": [
      "es6",
      "es2015",
      "es2017"
    ] /* Specify library files to be included in the compilation. */,
    "outDir": "dist" /* Redirect output structure to the directory. */,
    "rootDir": "src" /* Specify the root directory of input files. */,
    "strict": true /* Enable all strict type-checking options. */,
    "esModuleInterop": true /* Enables emit interoperability between CommonJS and ES Modules via creation of namespace objects for all imports. */,
    "resolveJsonModule": true /* Enables importing of JSON files. */
  },
  "include": [
    "src/**/*.ts",
    "globals.d.ts"
, "src/controllers/auth.controller.tsx", "src/config/config.tsx", "src/config/express.tsx"  ] /* Specifies an array of glob patterns that match the TypeScript files to be included in the compilation. */,
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ] /* Specifies an array of glob patterns to exclude TypeScript files from compilation. */
}
